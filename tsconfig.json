{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "jsx": "react-native",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2015", "dom"],
        "moduleResolution": "node"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "demo"
    ]
}

